    <script>
      const form = document.querySelector("form");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // get values
        const specialist = form.options.value;
        const meetDate = form.date.value;
        const meetTime = form.time.value.toString();
        
        try {
          const res = await fetch("/doctorMeet", {
            method: "POST",
            body: JSON.stringify({ specialist, meetDate,  meetTime }),
            headers: { "Content-Type": "application/json" },
          });
          const data = await res.json();
          if(!meetTime) alert("ltimos vaqtni belgilang");
          else if (data.userId) {
            alert("Sizning so'rovingiz qabul qilindi");
            location.assign("/loggedin");
          }
          // console.log(data);
        } catch (err) {
          console.log(err);
        }
      });
    </script>

