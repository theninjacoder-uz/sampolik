              <option value="d14">Terapevt</option>
              <option value="d15">Stamotolog</option>
              <option value="d16">Urolog</option>
          </select>
          <label for="" id="date-doct-meet-label">Sanasi</label>
          <input type="date" id="date-doct-meet-input" name="date"  min="2021-06-21" max="2021-12-31">
         <br>
          <label for="" id="time-doct-meet-label">Soati</label>
           <input type="time" id="time-doct-meet-input" name="time">
    
           <div class="btn d-flex">
            <button class="btn-submit" type="reset">O'chirish</button>
            <button class="btn-cancel">Yuborish</button>
        </div>
        </form>
      </div>
  
      
